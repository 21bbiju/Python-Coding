L = [4, 5, 1, 2, 9, 7, 10, 8]
print("Original List :", L)
  
#this variable to store the sum of a list

count = 0
  
for i in L:
    count += i
      
# divide the total elements by

avg = count/len(L)
  
print("sum = ", count)
print("average = ", avg)

# Sorting the elements
L.sort()
 
# prints the first element
print("Smallest element is:", L[0])

# prints last element
print("Largest element is:", L[-1])