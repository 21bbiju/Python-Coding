import random
playing = True
number = str(random.randint(1,10))
print("I will generate a number from 1 to 10 and you have to guess the number one digit at at a time. ")
print("the game end when you get one point")
while playing:
    guess = input("give a good guess: ")
    if number == guess:
        print("you win the game")
        print("the number was",number)
        break
    else:
        print("Wrong try again (also it's a number incase you wrote soemthing else)")